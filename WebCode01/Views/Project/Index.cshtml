@model IEnumerable<WebCode01.ViewModels.ProjectListViewModel>

@{
    ViewBag.Title = "My Projects";
}

<h2>Your Projects</h2>

<div class="container">
    <div class="row">
        <div class="btn-group ">
            @Html.ActionLink("Author Projects", "FilterProjects", new { isAuthor = true }, new { @class = "btn-class2 btn btn-default" })
            @Html.ActionLink("Member Projects", "FilterProjects", new { isAuthor = false }, new { @class = "btn-class2 btn btn-default" })
            @Html.ActionLink("My Projects", "Index", "Project", new { @class = "btn-class2 btn btn-default" })
            @Html.ActionLink("Create Project", "CreateProject", "Project", new { @class = "btn-class2 btn btn-default" })
            
        </div>
    </div>
</div>


<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="cont well col-md-11">
                        <h3>@Html.ActionLink(item.name, "Index", "ProjectFiles", new { projectId = item.id }, null)</h3>
                </div>

           </div>
            
        }
    </div>
</div>


@section scripts
{
    <script>
        $('.cont').click(function () {
            window.location.href = $('a', this).attr('href');
            return false;
        });
    </script>
}

