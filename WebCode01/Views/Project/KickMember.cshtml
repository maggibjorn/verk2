@model IEnumerable<WebCode01.ViewModels.KickMemberViewModel>

@{
    ViewBag.Title = "KickMember";
}

<h2>KickMember</h2>

    <h4>Your Projects & members</h4>
<div class="container">
    @foreach (var item in Model)
    {
     <div class="col-lg-12">
        <table class="table table-hover">
            <tr>
                <th>
                    <h4><b> @item.name </b></h4>
                </th>
                <th>
                    <h4><b> Members </b></h4>
                </th>
                <th>
                </th>
            </tr>
            <tbody>
                @foreach (var members in item.members)
                {
                    <tr>
                        <td> </td>
                        <td>@members.userEmail</td>
                        <td>@Html.ActionLink("Kick Member", "KickThisMember", "ProjectFiles", new { projectId = @item.projectId , email = @members.userEmail, projectName = @item.name }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
     </div>
    }
</div>


